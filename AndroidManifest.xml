<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.darkkatrom.dkwallpapers">

    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".ColorWallpaperActivity"
            android:label="@string/color_wallpaper_title"
            android:theme="@android:style/Theme.Material.DayNight.NoActionBar.TranslucentDecor"
            android:icon="@drawable/color_wallpaper_icon" >
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CustomizationsActivity"
            android:label="@string/customize_title"
            android:theme="@style/CustomizeTheme" />

        <activity
            android:name="net.darkkatrom.dkcolorpicker.ColorPickerActivity"
            android:label="@string/pick_color_title" />

        <receiver android:name=".PartnerWallpapers">
            <intent-filter>
                <action android:name="com.android.launcher3.action.PARTNER_CUSTOMIZATION"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>

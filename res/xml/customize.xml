<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/customize_title">

    <SwitchPreference
        android:key="use_gradient"
        android:title="@string/use_gradient_title"
        android:summary="@string/use_gradient_summary"
        android:defaultValue="false" />

    <ListPreference
        android:key="gradient_orientation"
        android:title="@string/gradient_orientation_title"
        android:summary="@string/gradient_orientation_summary"
        android:entries="@array/gradient_orientation_entries"
        android:entryValues="@array/gradient_orientation_values"
        android:defaultValue="2"
        android:dependency="use_gradient" />

    <SwitchPreference
        android:key="use_center_color"
        android:title="@string/use_center_color_title"
        android:summary="@string/use_center_color_summary"
        android:defaultValue="false"
        android:dependency="use_gradient" />

    <net.darkkatrom.dkcolorpicker.preference.ColorPickerPreference
        android:key="start_color"
        android:title="@string/start_color_title"
        app:defaultColor="#ff000000"
        app:resetColor1="#ff000000" />

    <net.darkkatrom.dkcolorpicker.preference.ColorPickerPreference
        android:key="center_color"
        android:title="@string/center_color_title"
        app:defaultColor="#00000000"
        app:resetColor1="#00000000"
        android:dependency="use_center_color" />

    <net.darkkatrom.dkcolorpicker.preference.ColorPickerPreference
        android:key="end_color"
        android:title="@string/end_color_title"
        app:defaultColor="#00000000"
        app:resetColor1="#00000000"
        android:dependency="use_gradient" />

</PreferenceScreen>
